@inject IStringLocalizer<Shared> Localizer
@inject IJSRuntime JSRuntime

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                var title = Localizer["PageTitle"].Value;
                var description = Localizer["PageDescription"].Value;
                await JSRuntime.InvokeVoidAsync("updatePageMeta", title, description);
            }
            catch
            {
                // Ignore JS errors during pre-rendering
            }
        }
    }
}