                        <li class="nav-item">
                            <a class="nav-link" @onclick="@(() => putFocusOn("Contact"))" style="cursor: pointer">Contact</a>
                        </li>
                    </ul>
                   
                </div>
            </div>
        </div>
    </div>
</nav>


@code {


    public async Task putFocusOn(string ElementId)
    {
        await JSRuntime.InvokeVoidAsync("focusOnElementbyId", ElementId);
    }

    private async Task ButtonClicked()
    {
        await JSRuntime.InvokeVoidAsync("console.log", "Prueba de Consolo");
       
       
    }
}
