@inherits LayoutComponentBase
@inject IStringLocalizer<Shared> Localizer

<DynamicHead />

<div id="app">
    <!-- Skip to main content link for accessibility -->
    <a href="#main-content" class="visually-hidden-focusable position-absolute top-0 start-0 z-index-high bg-primary text-white p-2 text-decoration-none">
        @Localizer["SkipToContent"]
    </a>
    
    <header role="banner">
        <MainMenu />
    </header>
    
    <main id="main-content" role="main" class="container-xl px-0" style="margin-top:80px;">
        @Body
    </main>
    
    <footer role="contentinfo">
        <BottomBar />
    </footer>
</div>

