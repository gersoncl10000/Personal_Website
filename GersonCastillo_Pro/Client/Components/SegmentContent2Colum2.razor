<!---------------------------- First Section lg view -------------------------------------------------------------------->
<!-- First Section -->

<div class="d-none d-md-block">
    @if (ActiveDivider1)
    {
        <!-- Outside Tittle Divider 1 -->
        @if (ActiveTittleDivider1)
        {

            <div class="d-flex align-items-stretch">
                <div class="d-flex justify-content-start align-items-center width-culumn1 @BgColorOutsideTittle1 vt-height-sg-2">
                    <div class="text-color-sg-2 font-Atn-pt-18 ps-2">@OutsideTittle1</div>
                </div>
                <div class="bg-sg-2 vt-width-sg-2 vt-height-sg-2"></div>
                <div class="d-flex justify-content-start align-items-center width-culumn2 @BgColorOutsideTittle2 vt-height-sg-2">
                    <div class="text-color-sg-2 font-Atn-pt-18 ps-2">@OutsideTittle2</div>
                </div>
            </div>
        }
        <!-- Divider 1 -->
        <div class="d-flex align-items-stretch">
            <div class="d-flex justify-content-center align-items-center bg-sg-2 width-culumn1 vt-height-sg-2">
                <div class="text-white">@Tittle1</div>
            </div>
            <div class="bg-sg-2 vt-width-sg-2 vt-height-sg-2"></div>
            <div class="d-flex justify-content-center align-items-center bg-sg-2 width-culumn2 vt-height-sg-2">
                <div class="text-white">@Tittle2</div>
            </div>
        </div>
    }
    <!-- Content First -->
    <div class="d-flex align-items-stretch">
        <div class="width-culumn1">@Content1</div>
        <div class="bg-sg-2 vt-width-sg-2"></div>
        <div class="width-culumn2">@Content2</div>
    </div>

</div>



<!---------------------------- Second Section lg view -------------------------------------------------------------------->


<div class="d-none d-md-block">
    <!-- Second Section -->
    @if (ActiveSection2)
    {
        <!-- Outside Tittle Divider 2 -->
        @if (ActiveTittleDivider2)
        {

            <div class="d-flex align-items-stretch">
                <div class="d-flex justify-content-start align-items-center width-culumn1 @BgColorOutsideTittle3 vt-height-sg-2">
                    <div class="text-color-sg-2 font-Atn-pt-18 ps-2">@OutsideTittle3</div>
                </div>
                <div class="bg-sg-2 vt-width-sg-2 vt-height-sg-2"></div>
                <div class="d-flex justify-content-start align-items-center width-culumn2 @BgColorOutsideTittle4 vt-height-sg-2">
                    <div class="text-color-sg-2 font-Atn-pt-18 ps-2">@OutsideTittle4</div>
                </div>
            </div>
        }
        <!-- Second Section -->
        @if (ActiveDivider2)
        {
            <!-- Divider 2 -->
            <div class="d-flex align-items-stretch">
                <div class="d-flex justify-content-center align-items-center bg-sg-2 width-culumn1 vt-height-sg-2">
                    <div class="text-white">@Tittle3</div>
                </div>
                <div class="bg-sg-2 vt-width-sg-2 vt-height-sg-2"></div>
                <div class="d-flex justify-content-center align-items-center bg-sg-2 width-culumn2 vt-height-sg-2">
                    <div class="text-white">@Tittle4</div>
                </div>
            </div>
        }
        <!-- Content Second -->
        <div class="d-flex align-items-stretch">
            <div class="width-culumn1">@Content3</div>
            <div class="bg-sg-2 vt-width-sg-2"></div>
            <div class="width-culumn2">@Content4</div>
        </div>
    }
</div>


